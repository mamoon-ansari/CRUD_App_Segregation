@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
@* <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
 *@

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Category</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category">
                <i class="bi bi-plus-circle"></i>&nbsp;
                Create New Category
            </a>
        </div>
    </div>
</div>
<table class="table table-striped table-bordered " style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
        <tr>
            <td>
                @i.Name
            </td>
            <td>
                @i.DisplayOrder
            </td>
            <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@i.Id"> <i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@i.Id"> <i class="bi bi-trash"></i></a>

            </td>
        </tr>
        }
    </tbody>
</table>

